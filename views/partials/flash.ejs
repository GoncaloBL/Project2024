<% if (success && success.length>0) {  %>
    <div class=" mx-auto mt-1 alert alert-success alert-dismissible fade show" role="alert" style="position: absolute; width: 70%; z-index: 1000;">
        <%= success  %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>

<% if (error && error.length>0) {  %>
    <div class=" mx-auto mt-1 alert alert-danger alert-dismissible fade show" role="alert" style="position: absolute; width: 70%; z-index: 1000;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>