<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <h1 class="text-center mt-3">Edit Product</h1>
        <div class="col-6 mx-auto d-inline">
            <form action="/product/<%=data.id%>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="Product[title]" id="title" value="<%= data.title %>"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="Product[location]" id="location"
                        value="<%= data.location  %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="Product[description]" id="description" cols="20" rows="5"
                        required><%= data.description %></textarea>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">â‚¬</span>
                    </div>
                    <input type="number" value="<%= data.price  %>" class="form-control" name="Product[price]"
                        step=".01">
                </div>

                <button class="btn btn-primary">Finish Text Edit</button>
            </form>
        </div>
    </div>
    <div class="row">

        <h4 class="text-center">Pictures</h4>
        <h6 class="text-muted text-center">Click the images to delete them</h6>

            <div class="m-1 d-flex col-6 mx-auto" style="flex-wrap: wrap;justify-content: center;">
                <% data.image.forEach((img, i)=> {%>
                    <div class="m-2">
                        <form class="" action="/product/<%= data._id %>/edit/images?_method=DELETE" method="POST">
                            <input type="hidden" name="imageURL" value="<%=img %>">
                            <input type="image" src="<%= img %>" class="img-thumbnail" style="height: 100px" alt="">
                        </form>
                    </div>
                    <% }) %>
            </div>
        </div>



        <script>
            // Example starter JavaScript for disabling form submissions if there are invalid fields
            (function () {
                'use strict'

                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.querySelectorAll('.needs-validation')

                // Loop over them and prevent submission
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }

                            form.classList.add('was-validated')
                        }, false)
                    })
            })()</script>