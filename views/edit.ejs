<% layout('/layouts/boilerplate') -%>

<link rel="stylesheet" href="/stylesheets/new.css">


    <div class="row mt-3">
        <div class="col-lg-6 mx-auto card">
            <form action="/product/<%=data.id%>?_method=PUT" method="POST" novalidate class="needs-validation card-body">
                <div class="mb-3">
                    <label class="form-label label-title" for="title">Name</label>
                    <input class="form-control" type="text" name="Product[title]" value="<%= data.title %>" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label label-title" for="location">Location</label>
                    <input class="form-control" type="text" name="Product[location]" id="location"
                        placeholder="City, Country" value="<%= data.location  %>" required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label label-title" for="description">Description</label>
                    <textarea class="form-control" name="Product[description]" id="description" cols="10" rows="2"
                        required><%= data.description %></textarea>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>
                <div class="col-3">
                    <label class="form-label label-title" for="cost">Cost</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="border-radius: 20% 0% 0% 20%;">â‚¬</span>
                        </div>
                        <input type="number" class="form-control " name="Product[price]" value="<%= data.price  %>" id="cost" step=".01" placeholder="0" style="border-radius: 0px 10px 10px 0px;" required>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" style="width: 10rem;">Finish Text Edit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <h4 class="text-center">Pictures</h4>
        <h6 class="text-muted text-center">Click the images to delete them</h6>

            <div class="m-1 d-flex col-6 mx-auto" style="flex-wrap: wrap;justify-content: center;">
                <% data.image.forEach((img, i)=> {%>
                    <div class="m-2">
                        <form class="" action="/product/<%= data._id %>/edit/images?_method=DELETE" method="POST">
                            <input type="hidden" name="imageURL" value="<%=img %>">
                            <input type="image" src="<%= img %>" class="img-thumbnail" style="height: 100px" alt="">
                        </form>
                    </div>
                    <% }) %>
            </div>
        </div>



        <script>
            // Example starter JavaScript for disabling form submissions if there are invalid fields
            (function () {
                'use strict'

                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.querySelectorAll('.needs-validation')

                // Loop over them and prevent submission
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }

                            form.classList.add('was-validated')
                        }, false)
                    })
            })()</script>